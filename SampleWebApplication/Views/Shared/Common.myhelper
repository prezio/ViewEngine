mixin Html(title, body)
<-
	<html>
		<head>
			<title>
				@title
			</title>
		</head>
		<body>
			@body
		</body>
	</html>
->

mixin H1(header)
<-
	<h1> @header </h1>
->

mixin H2(header)
<-
	<h2> @header </h2>
->

mixin H3(header)
<-
	<h3> @header </h3>
->

mixin Line(line)
<-
	@line </br>
->


mixin PostForm(@{string controllerName}, @{string actionName}, body)
<-
	<form action="/@{controllerName}/@{actionName}" method="post">
		@body
	</form>
->

mixin TextInput(@{string name})
<-
	<input id="@{name}" name="@{name}" type="text" value="">
->

mixin PassInput(@{string name})
<-
	<input id="@{name}" name="@{name}" type="password" value="">
->

mixin Td(body)
<-
	<td> @body </td>
->

mixin Tr(body)
<-
	<tr> @body </tr>
->

mixin Table(body)
<-
	<table cellpadding="0" cellspacing="0">
		<tbody>
			@body
		</tbody>
	</table>
->

mixin Submit(@{string name})
<-
	<input type="submit" value="@{name}">
->

mixin Ul(body)
<-
	<ul> @body </ul>
->

mixin Li(body)
<-
	<li> @body </li>
->

mixin P(body)
<-
	<p> @body </p>
->

mixin If(@{bool condition}, trueState, falseState)
<|
	--if (condition) {
		eval trueState
	--}
	--else {
		eval falseState
	--}
|>