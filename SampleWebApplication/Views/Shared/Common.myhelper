mixin Html(title, body)
<-
	<html>
		<head>
			<title>
				@title
			</title>
		</head>
		<body>
			@body
		</body>
	</html>
->

mixin H1(header)
<-
	<h1> @header </h1>
->

mixin Line(line)
<-
	@line </br>
->


mixin Form(@{string actionName}, @{string controllerName}, body)
<-
	<form action="/@{controllerName}/@{actionName}" method="post">
		@body
	</form>
->

mixin Input(@{string name})
<-
	<input id="@{name}" name="@{name}" type="text" value="">
->